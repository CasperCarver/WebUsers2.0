
<h2>Users</h2>



<form method="POST" class="form">
  {{!-- <button type="submit" class="btn btn-small">Delete</button>
  <button type="submit" class="btn btn-small">Block</button>
  <button type="submit" class="btn btn-small">Unblock</button> --}}
   <button type="submit" class="btn btn-small" onclick="submitForm('/DELETE')">Delete</button>
  <button type="submit" class="btn btn-small" onclick="submitForm('/BLOCK')">Block</button>
  <button type="submit" class="btn btn-small" onclick="submitForm('/UNBLOCK')">Unblock</button>

{{#if user.length}}
<table class="striped centered">
  {{#each user}}
    <tr>
      <td><label>
        <input type="checkbox" value="{{_id}}" name="id"/>
        <span></span>
      </label>
        {{!-- <label>
        <input type="hidden" value="{{_id}}" name="id" />
        <span></span>
      </label> --}}
      </td>
      <td>{{this._id}}</td>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.dateRegistration}}</td>
      <td>{{this.lastLogin}}</td>
      <td></td>
    </tr>
  {{/each}}
</table>
  
</form>
{{else}}
<p>No users!</p>
{{/if}}